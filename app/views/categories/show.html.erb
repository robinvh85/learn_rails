<p id="notice"><%= notice %></p>

<% content_for :title do %>
  Categories
<% end %>

<% content_for :breadcumb do %>
  <li><%= link_to 'Categories', categories_path %></li>
  <li class="active">Show</li>
<% end %>

<div class="box">
  <div class="box-header with-border">
    <h3 class="box-title">Categories</h3>
    <div class="box-tools pull-right">
      <%= link_to 'Back', categories_path, class: 'btn btn-success' %>
      <%= link_to 'Edit', edit_category_path(@category), class: 'btn btn-success' %>
      <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
        <i class="fa fa-minus"></i>
      </button>
    </div>
  </div>
  <div class="box-body">
    <div class="form-group col-md-6">
      <div class="col-sm-2 text-right">
        Name:
      </div>
      <div class="col-sm-10">
        <%= @category.name %>
      </div>
    </div>
    <div class="form-group col-md-6">
      <div class="col-sm-2 text-right">
        Image:
      </div>
      <div class="col-sm-10">
        <%= image_tag @category.image.url, { width: 300 } if @category.image.present? %>
      </div>
    </div>
  </div>
  <!-- /.box-body -->
  <div class="box-footer">

  </div>
  <!-- /.box-footer-->
</div>
<!-- /.box -->
