<%= form_with(model: model, class: 'form-horizontal') do |form| %>
  <div class="box-body">
    <% if model.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(model.errors.count, "error") %> prohibited this model from being saved:</h2>
        <ul>
        <% model.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group col-md-6">
      <%= form.label :name, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= form.text_field :name, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group col-md-6">
      <%= form.label :phone, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= form.text_field :phone, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group col-md-6">
      <%= form.label :email, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= form.text_field :email, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group col-md-6">
      <%= form.label :avatar, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= form.file_field :avatar, class: 'form-control' %>
      </div>
    </div>
  </div>
  <!-- /.box-body -->
  <div class="box-footer text-center">
    <%= submit_tag 'Submit', class: 'btn btn-success' %>
  </div>
  <% end %>
  <!-- /.box-footer-->
