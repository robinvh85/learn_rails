<div class="form-group">
  <div class="col-md-9">
    <object data="/readers/pdf/test1" type="application/pdf" width="100%" height="600" id="pdf1">
      <iframe src="/readers/pdf/test1" width="100%" height="600" style="border: none;" id="id="pdf2">
      This browser does not support PDFs. Please download the PDF to view it: <a href="/files/agile development rails 5.1.pdf">Download PDF</a>
      </iframe>
    </object>
  </div>
  <div class="col-md-3 upload-btn-wrapper">
    <div class="col-md-6">
      <button class="btn btn-primary">Upload a file type 'one'</button>
      <input type="file" ondrop="onDrop(this, 'one')" multiple>
    </div>
    <div class="col-md-6">
      <button class="btn btn-primary">Upload a file type 'two'</button>
      <input type="file" ondrop="onDrop(this, 'two')" multiple>
    </div>
  </div>
</div>

<style>
.upload-btn-wrapper {
  position: relative;
  overflow: hidden;
  display: inline-block;
}

.upload-btn-wrapper input[type=file] {
  font-size: 100px;
  position: absolute;
  left: 0;
  top: 0;
  opacity: 0;
}
</style>

<script>
  (function(){
    window.onDrop = function(e, type){
      console.log("type", e);

      var formData = new FormData();
      formData.append('file_0', e.files[0]);

      axios.post('/readers/upload_pdf', formData, {
        headers: {
          'Content-Type': 'multipart/form-data'
        },
      })
      .then(function (res) {
        alert('done');
      });
    }

    $(function(){
      function init(){
        $("input[type=file]").click(function(e){
          e.preventDefault();
        });
      }

      init();
    });
  })(window);
</script>
