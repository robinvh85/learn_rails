<div class="login-box">
  <div class="login-box-body">
    <p class="login-box-msg">Sign in</p>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group has-feedback">
        <%= f.text_field :username, autofocus: true, class: 'form-control', placeholder: 'Username' %>
        <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
      </div>
      <div class="form-group has-feedback">
        <%= f.password_field :password, autocomplete: "current-password", class: 'form-control', placeholder: 'Password' %>
        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
      </div>
      <div class="row">
        <div class="col-xs-8">
          <div class="checkbox icheck">
            <label>
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </label>
          </div>
        </div>
        <!-- /.col -->
        <div class="col-xs-4">
          <%= f.submit "Log in", class: "btn btn-primary btn-block btn-flat" %>
        </div>
        <!-- /.col -->
      </div>
    <% end %>

    <div class="social-auth-links text-center">
      <p>- OR -</p>
      <a href="#" class="btn btn-block btn-social btn-facebook btn-flat"><i class="fa fa-facebook"></i> Sign in using
        Facebook</a>
      <%= link_to(my_login_google_oauth2_omniauth_authorize_path, class: 'btn btn-block btn-social btn-google btn-flat') do %>
        <i class="fa fa-google-plus"></i>Sign in using Google+
      <% end %>
    </div>
    <!-- /.social-auth-links -->

    <a href="#">I forgot my password</a><br>
    <%= link_to 'Register a new membership', new_my_login_registration_path %>

  </div>
  <!-- /.login-box-body -->
</div>
<!-- /.login-box -->
